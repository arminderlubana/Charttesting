@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>CarbonLite-Start and Finish Curves</h2>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

        google.charts.load("current", { packages: ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);
    function drawChart() {

        var Date = [@Model.ProductData.Date];
        var Start = [@Model.ProductData.Start];
        var Finish = [@Model.ProductData.Finish];

        var data = new google.visualization.DataTable();
        data.addColumn('string', '@Model.DateTitle');
        data.addColumn('number', '@Model.StartTitle');
        data.addColumn('number', '@Model.FinishTitle');
        for (i = 0; i < Date.length; i++) {
            data.addRow([Date[i].toString(), Start[i], Finish[i]]);
        }
        var options = {
            title: 'CarbonLite-Start and Finish Curves',
            hAxis: { title: '@Model.DateTitle', titleTextStyle: { color: 'red'} }
        };

        var chart = new google.visualization.LineChart(document.getElementById('line-chart-marker'));
        chart.draw(data, options);
    }
</script>
<div id="line-chart-marker" style="width: 900px; height: 500px"></div>
<div id='polynomial2_div'></div>
